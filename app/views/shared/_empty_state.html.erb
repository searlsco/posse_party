<%
  # Required locals: icon, title, description
  # Optional locals: button_path, button_text, button_icon (default: "plus"), button_size (default: :large)
  button_icon ||= "plus"
  button_size ||= :large
%>

<div class="flex flex-col items-center justify-center py-16">
  <%= render "icons/#{icon}", class: "size-16 text-secondary mb-4" %>
  <h3 class="text-lg font-medium text-primary mb-2"><%= title %></h3>
  <p class="text-secondary mb-6"><%= description %></p>
  <% if local_assigns[:button_path] && local_assigns[:button_text] %>
    <%= render "shared/button", 
      path: button_path, 
      text: button_text, 
      variant: :primary,
      size: button_size,
      icon: button_icon
    %>
  <% end %>
</div>